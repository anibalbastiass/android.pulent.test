<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="com.anibalbastias.android.pulentapp.presentation.ui.search.model.SearchResultItemViewData" />

        <variable
                name="clickHandler"
                type="com.anibalbastias.android.pulentapp.presentation.util.adapter.base.BaseBindClickHandler" />

    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/searchRecentItemContainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="16sp"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{(v) -> clickHandler.onClickView(v, item)}"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/searchRecentImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:transitionName="firstTransitionName"
                    tools:src="@drawable/ic_search" />

            <TextView
                    android:id="@+id/searchRecentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:text="Search 1"
                    android:textColor="@color/normalTextColor"
                    android:textSize="14sp"
                    tools:text="BMW X5 xDrive30d E70 Wagon" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>