<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="com.anibalbastias.android.pulentapp.ui.search.model.SearchResultItemViewData" />

        <variable
                name="clickHandler"
                type="com.anibalbastias.android.pulentapp.base.adapter.base.BaseBindClickHandler" />

    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/testDriveInventoryItemContainer"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="16sp"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{(v) -> clickHandler.onClickView(v, item)}"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/testDriveInventoryItemImageView"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="30"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        bind:setImageUrl="@{item.artworkUrl100}"
                        tools:src="@drawable/placeholder" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="70"
                        android:orientation="vertical"
                        android:padding="5dp">

                    <TextView
                            android:id="@+id/testDriveInventoryItemTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@{item.artistName}"
                            android:textColor="@color/normalTextColor"
                            android:textSize="14sp"
                            tools:text="BMW X5 xDrive30d E70 Wagon" />

                    <TextView
                            android:id="@+id/testDriveInventoryItemSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:maxLines="1"
                            android:text="@{item.trackName}"
                            android:textColor="@color/normalTextColor"
                            android:textSize="13sp"
                            tools:text="$68.900" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>